@model StoreItemListViewModel
@{
    ViewData["Title"] = "STORE ITEMS";
    ViewData["TitleCart"] = "USER cart";
}

<!-- Normal HTML comments work too.-->
<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Id</td>
                <td>Name</td>
                <td>price</td>
            </tr>
        </thead>
        @foreach (var item in Model.StoreItems)
        {
            <tr>
                <td>
                    <form asp-action="AddItemToCart" method="POST">
                        <input type="checkbox" class="done-checkbox">
                        <input type="hidden" name="id" value="@item">
                    </form>
                </td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.price</td>
            </tr>
        }
    </table>
    <div class="panel-footer add-item-form">
        <div class="panel-heading">@ViewData["TitleCart"]</div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>&#x2714;</td>
                    <td>Id</td>
                    <td>Name</td>
                    <td>price</td>
                </tr>
            </thead>
            @foreach (var item in Model.StoreItemsInCart)
            {
                <tr>
                    <td>
                        <form asp-action="RemoveItemFromCart" method="POST">
                            <input type="checkbox" class="done-checkbox">
                            <input type="hidden" name="id" value="@item.Id">
                        </form>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.price</td>
                </tr>
            }
        </table>

    </div>
</div>

